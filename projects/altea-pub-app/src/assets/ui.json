{
    "invoiceForm":   {
        "type": "form",
        "name": "invoice",
        "form": { "tag": true },
        "bind": { "mode": "ngModel", "to": "invoice", "type": "Invoice", "import": "ts-altea-model" },
        "label": { "mode": "ngx-altea-label-control", "translate": "objects.invoice"},
        "rows": { "generate": true, "cols": 1 },
        "elements": {
              "country": {
                "type": "ng-select",
                "source": { "mode": "enum", "name": "Country", "import": "ts-altea-model", "translate": "enums.country" },
                "required": true,
                "clearable": false,
                "multiple": false
            },
            "company": {
                "type": "text",
                "required": true
            },
            "vat": {
                "type": "text",
                "required": false
            },
            "address": {
                "type": "textarea",
                "required": true,
                "rows": 4
            },
            "request": {
                "type": "button",
                "translate": "dic.add",
                "click": "test($event)",
                "class": { "style": "primary", "outline": false, "size": "", "block": true } ,
                "disabled": { "enable": true, "pristine": true, "valid": false }
            }
        }
    },
    "internalOrderContact":   {
        "type": "form",
        "info": "Only used internally. To link a contact (customer) to an order. Search contact or send proposal to customer.",
        "name": "invoice",
        "form": { "tag": true },
        "bind": { "mode": "ngModel", "to": "invoice", "type": "Invoice", "import": "ts-altea-model" },
        "label": { "mode": "ngx-altea-label-control", "translate": "objects.invoice"},
        "rows": { "generate": true, "cols": 1 },
        "elements": {
            "searchFor": {
                "type": "text",
                "required": false
            },
            "search": {
                "type": "button",
                "translate": "dic.search",
                "click": "searchContact($event)",
                "class": { "style": "primary", "outline": false, "size": "", "block": true } ,
                "disabled": { "enable": true, "pristine": true, "valid": false }
            },
            "mobile": {
                "type": "text",
                "required": false
            },
            "email": {
                "type": "text",
                "required": false
            },
            "validity": {
                "type": "ng-select",
                "source": { "mode": "enum", "name": "Country", "import": "ts-altea-model", "translate": "enums.country" },
                "required": true,
                "clearable": false,
                "multiple": false
            },
            "sendOffer": {
                "type": "button",
                "translate": "dic.search",
                "click": "searchContact($event)",
                "class": { "style": "primary", "outline": false, "size": "", "block": true } ,
                "disabled": { "enable": true, "pristine": true, "valid": false }
            }
        }
    },
    "orderSearch": {
        "searchFor": {
            "type": "text",
            "required": false
        },
        "search": {
            "type": "button",
            "translate": "dic.search",
            "click": "searchContact($event)",
            "class": { "style": "primary", "outline": false, "size": "", "block": true } ,
            "disabled": { "enable": true, "pristine": true, "valid": false }
        }
    },
    "posReserve": {
        "type": "form",
        "bindTo": "object",
        "translate": "dic.",
        "elements": {
            "searchFor": {
                "type": "text",
                "required": false
            },
            "search": {
                "type": "button"
            },
            "mobile": {
                "type": "text",
                "required": false
            },
            "email": {
                "type": "text",
                "required": false
            },
            "validity": {
                "type": "select",
                "bindMode": "custom",
                "required": true
            },
            "sendOffer": {
                "type": "button"
            }
        }
    },
    "recurringTask": {
        "type": "form",
        "bindTo": "object",
        "translate": "objects.rTask.",
        "elements": {
            "name": {
                "type": "text",
                "required": true
            },
            "loc": {
                "type": "text",
                "required": false
            },
            "info": {
                "type": "textarea",
                "required": false
            },
            "email": {
                "type": "text",
                "required": false
            },
            "schedule": {
                "type": "select",
                "bindMode": "enum",
                "required": true,
                "enum": "TaskSchedule"
            }
        }
    }
}